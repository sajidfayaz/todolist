<%- include("header"); -%>

    <div class="box" id="heading">
        <h1> <%= title %> </h1>

    </div>

    <div class="box">
        <form action="/delete" method="post">
            <input type="hidden" name="listName" value="<%= title %>"></input>
            <% listItems.forEach((listItem) => { %>
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= listItem._id %>" onChange="this.form.submit()">
                    <p> <%= listItem.name %> </p> 
                </div>
            <% }); %>
        </form>

        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add new item" autocomplete="off">
            <button type="submit" name="button" value="<%= title %>">+</button>
        </form> 
    </div>
    
<%- include("footer"); -%>
